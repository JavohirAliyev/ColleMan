@model List<ColleMan.Models.Collection>

<h2>User Profile</h2>

<table class="table">
    <div class="col-sm-4.5">
        <a asp-action="CreateCollection" asp-controller="User" class="btn btn-success">
            <i class="material-icons">&#xe147;</i>
            <span>Create New</span>
        </a>
    </div>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">User</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var collection in Model)
        {
            <tr>
                <td>@collection.Id</td>
                @if (collection.ImageUrl is not null)
                {
                    <td><img src="@Url.Content(collection.ImageUrl)" alt="Collection Cover" class="img-thumbnail" style="max-width: 150px; max-height: 150px;"/></td>
                }
                else
                {
                    <td>No Image</td>
                }
                <td>@collection.Name</td>
                <td>@collection.Description</td>
                <td>@collection.Category</td>
                <td>@collection.User.UserName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@collection.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@collection.Id" class="btn btn-info btn-sm">View</a>
                    <form asp-action="Delete" asp-route-id="@collection.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        $('.delete-btn').on('click', function (e) {
            e.preventDefault();
            var form = $(this).closest('form');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel!',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelled',
                        'Your collection is safe :)',
                        'error'
                    );
                }
            });
        });
    });
</script>
